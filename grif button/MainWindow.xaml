<Window x:Class="grif_button.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:grif_button"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="GridInner" Background="Azure" ShowGridLines="True">

        </Grid>

        <StackPanel Grid.Column="1" Background="Gray" >
            <Label Content="R" Width="20" Height="23"/>
            <TextBox TextAlignment="Right" x:Name="TextBoxR" Margin="5">

            </TextBox>
            <Label Content="C" Width="20" Height="23"/>
            <TextBox TextAlignment="Right" x:Name="TextBoxC" Margin="5">

            </TextBox>

            <Button Content="Create" x:Name="ButtonCreate" Margin="5" Click="ButtonCreateIvent"/>
            <Button Content="Add_Buttons" x:Name="ButtonAdd" Margin="5" Click="ButtonAdd_Click"/>

        </StackPanel>


    </Grid>
</Window>
